@model ProductCrud.Web.Models.ProductListViewModel
@{
    ViewData["Title"] = "Список товаров";
}

<h2>Товары</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<form method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <label class="form-label">Поиск</label>
        <input type="text" name="search" value="@Model.SearchQuery" class="form-control" placeholder="Поиск по названию или описанию..." />
    </div>
    <div class="col-md-3">
        <label class="form-label">Категория</label>
        <select name="category" class="form-select">
            <option value="">Все категории</option>
            @foreach (var cat in Model.Categories)
            {
                <option value="@cat" selected="@(Model.CategoryFilter == cat)">@cat</option>
            }
        </select>
    </div>
    <div class="col-md-2">
        <label class="form-label">Сортировка</label>
        <select name="sortBy" class="form-select">
            <option value="Name" selected="@(Model.SortBy == "Name")">Название</option>
            <option value="Price" selected="@(Model.SortBy == "Price")">Цена</option>
            <option value="Category" selected="@(Model.SortBy == "Category")">Категория</option>
            <option value="CreatedAt" selected="@(Model.SortBy == "CreatedAt")">Дата</option>
        </select>
    </div>
    <div class="col-md-1">
        <label class="form-label">Порядок</label>
        <div class="form-check mt-2">
            <input type="checkbox" name="sortDesc" value="true" class="form-check-input"
                   @(Model.SortDescending ? "checked" : "") />
            <label class="form-check-label">Убыв.</label>
        </div>
    </div>
    <div class="col-md-2 d-flex align-items-end">
        <button type="submit" class="btn btn-primary me-2">Найти</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Сброс</a>
    </div>
</form>

<a asp-action="Create" class="btn btn-success mb-3">Добавить товар</a>

@if (Model.Products.Any())
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Название</th>
                <th>Описание</th>
                <th>Цена</th>
                <th>Категория</th>
                <th>Создан</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model.Products)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>@(p.Description?.Length > 50 ? p.Description[..50] + "..." : p.Description)</td>
                    <td>@p.Price.ToString("N2") руб.</td>
                    <td>@p.Category</td>
                    <td>@p.CreatedAt.ToString("dd.MM.yyyy")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-warning">Редактировать</a>
                        <form asp-action="Delete" asp-route-id="@p.Id" method="post" style="display:inline"
                              onsubmit="return confirm('Вы уверены, что хотите удалить этот товар?')">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (Model.TotalPages > 1)
    {
        <nav>
            <ul class="pagination">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.Page ? "active" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-search="@Model.SearchQuery"
                           asp-route-category="@Model.CategoryFilter"
                           asp-route-sortBy="@Model.SortBy"
                           asp-route-sortDesc="@Model.SortDescending"
                           asp-route-page="@i">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }

    <p class="text-muted">Всего товаров: @Model.TotalItems</p>
}
else
{
    <div class="alert alert-info">Товары не найдены</div>
}
